@media(max-width: 850px)
  #banner
    display none

  #menu
    z-index 9999
    width 100%
    height 47px
    padding 0
    text-align right

    ul
      display inline-block

      li
        display inline-block

        a
          padding-left 10px
          padding-right 10px
          height 44px
          line-height 40px
          border-top 3px solid rgba(white, 0)

          &:hover
            background rgba(black, 0.2)
            border-top 3px solid color-shiningblue
            border-left 0 none

      &.pages
        float left

      &.social

        .fontello
          padding-left .2em
          padding-right .2em

        span
          display none

    h3
      display none

  #main
    padding-top 47px

@media(max-width: 650px)
  #homepage
    div
      header
        h1
          margin 0
        h2
          display none

      nav
        ul.pages
          display block
          margin-bottom 15px

  #menu
    ul.pages

      .fontello
        padding-left .2em
        padding-right .2em

      span
        display none

  article
    margin 20px 30px

@media(max-width: 450px)
  #homepage
    nav
      ul.pages
        text-align left
        display block
        margin-bottom 15px

        li
          display block
          margin 0 auto 5px
          text-align center

          a
            width 50%
            min-width 120px

            &:active
              transform translate3d(0, 0, 0)

  #avatar.homepage
    width 120px
    height 120px

    & + span
      top -180px

    &:hover + span
      top -170px

  #responsive
    display block
    height 44px
    background color-dark
    text-align right
    position fixed
    z-index 9998
    top 0
    left 0
    right 0
    width 100%

    ul
      display inline-block
      margin 0
      padding 0

      li
        display inline-block
        margin 0
        padding 0

        a
          height 44px
          line-height 44px
          font-size 24px
          padding-left 10px
          padding-right 10px
          border-top 0 none
          color color-lightgray
          display block

    button
      float left
      height 44px
      font-size 24px
      padding-left 10px
      padding-right 10px
      border 0
      outline 0
      background color-dark
      color color-light
      cursor pointer

      body.menu-open-responsive &
        background color-superdark

  #menu
    padding 0
    text-align left
    height 0
    overflow hidden
    transition height 300ms ease-in-out
    top 44px

    body.menu-open-responsive &
      height 260px

    ul.pages
      display block
      float none

      li
        display block
        border-bottom 1px solid rgba(black, .5)
        border-top 1px solid rgba(color-gray, .5)

        a
          padding-left 20px
          padding-right 20px
          border-top 0 none
          height 50px
          line-height 50px

          .fontello
            padding-right .4em

          span
            display inline

    ul.social
      display none

      span
        display inline