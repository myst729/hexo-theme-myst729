.entry
  .gist
    background #eee
    border 1px solid color-light
    margin-top 15px
    padding 7px 15px
    border-radius 2px
    text-shadow 0 0 1px #fff
    line-height 1.6
    overflow auto
    color color-gray
    .gist-file
      border none
      font-family inherit
      margin 0
      font-size 0.9em
      .gist-data
        background none
        border-bottom none
        pre
          padding 0 !important
          font-family font-mono

      .gist-meta
        background none
        color color-gray
        margin-top 5px
        padding 0
        text-shadow 0 0 1px #fff
        font-size 100%
        a
          color color-shiningblue
          &:visited
            color color-shiningblue

figure.highlight
  background #eee
  border 1px solid color-light
  margin-top 15px
  padding 7px 15px
  border-radius 2px
  text-shadow 0 0 1px white
  line-height 1.6
  overflow auto
  position relative
  font-size 0.9em
  font-size 13px
  figcaption
    color color-dark
    margin-bottom 5px
    text-shadow 0 0 1px white
    a
      position absolute
      right 15px

  pre
    border none
    padding 0
    margin 0

  table
    margin-top 0
    margin-bottom 0
    border-spacing 0
    border-collapse separate

    th
    td
      padding 1px 15px 1px 1px
      border 0 none

    tr
      background transparent

  .gutter
    color color-dark
    padding-right 15px
    border-right 1px solid color-light
    text-align right

  .code
    padding-left 15px
    border-left 1px solid color-superlight
    color color-dark

  .line
    height 21px

code
  padding 0.2em 0
  margin 0
  background rgba(black, .04)
  border-radius 3px
  font-family font-mono

  &:before
  &:after
    letter-spacing -0.2em
    content '\00a0'

pre
  font-family font-mono

  // Theme: Solarized - Light
  // More theme here: http://softwaremaniacs.org/media/soft/highlight/test.html
  .comment
  .template_comment
  .diff .header
  .doctype
  .pi
  .lisp .string
  .javadoc
    color #998

  .keyword
  .winutils
  .method
  .addition
  .css .tag
  .request
  .status
  .nginx .title
    color #6e81e2
    font-weight bold

  .number
  .command
  .string
  .tag .value
  .phpdoc
  .tex .formula
  .regexp
  .hexcolor
    color #df5000

  .title
  .localvars
  .chunk
  .decorator
  .built_in
  .identifier
  .vhdl
  .literal
  .id
    color #000080

  .attribute
  .variable
  .lisp .body
  .smalltalk .number
  .constant
  .class .title
  .parent
  .haskell .type
    color #008080

  .preprocessor
  .preprocessor .keyword
  .shebang
  .symbol
  .symbol .string
  .diff .change
  .special
  .attr_selector
  .important
  .subst
  .cdata
  .clojure .title
    color #586e24

  .deletion
    color #931313